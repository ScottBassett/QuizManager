@model IEnumerable<QuizManager.DataAccess.Models.Question>
@inject SignInManager<IdentityUser> signInManager;

@{
    ViewData["Title"] = "Index";
}

<h1>Questions</h1>

@if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-outline-primary" asp-action="Create">Create New Question</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionName)
                </td>

                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Answers</a>
                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
