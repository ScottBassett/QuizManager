@*@model QuizManager.DataAccess.Models.Question*@
@model QuestionDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.QuestionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.QuestionName)
        </dd>
    </dl>

    <hr />

    <dl class="row">
        <dt class="col-sm-2"> Answers </dt>
    </dl>

    <table class="table">

        @foreach (var answer in Model.Answers)
        {
            <tr>
                <td>
                     @Html.DisplayFor(modelItem => answer.AnswerName)
                </td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Question.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
