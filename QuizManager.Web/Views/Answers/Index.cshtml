@model IEnumerable<QuizManager.DataAccess.Models.Answer>
@inject SignInManager<IdentityUser> signInManager;

@{
    ViewData["Title"] = "Index";
}

<h1>Answers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnswerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerName)
                </td>
                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <td>
                        @*<a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
