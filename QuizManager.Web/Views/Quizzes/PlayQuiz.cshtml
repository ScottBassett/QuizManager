@model PlayQuizViewModel

@{
    ViewData["Title"] = "Details";
    //var playerScore = 12;
    //var playerGuess = false;
}

<h1>@Model.Quiz.QuizName Quiz</h1>

<div>
    <table class="table">

        @foreach (var question in Model.Questions)
        {
            <tr>
                <td>
                    <h4>Question</h4>
                </td>
            </tr>

            <tr>
                <td>
                    <a asp-controller="Questions" asp-action="Details" asp-route-id="@question.Id">@Html.DisplayFor(modelItem => question.QuestionName)</a>
                </td>
            </tr>

            @foreach (var answer in question.AllAnswers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => answer.AnswerName)
                    </td>
                    <td>
                        @Html.RadioButtonFor(modelItem => answer.IsCorrect, "true")
                    </td>
                </tr>
            }
        }
    </table>
</div>

<div>
    <a class="btn btn-success" asp-controller="" asp-action="">Finish Quiz</a>
    @*<a class="btn btn-dark" asp-controller="Quizzes" asp-action="IncreaseScore">Increase score</a>*@
    <button class="btn btn-dark" onclick="IncreaseScore()">Increase score</button>
    Your score:
</div>

<br/>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Quiz.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>